---
import './SectionHeading.scss';

interface SectionHeadingProps {
    headingType?: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6';
    sectionNumber?: number;
}

const {
    headingType = "h1",
    sectionNumber = 1,
}: SectionHeadingProps = Astro.props;

const HeadingTag = headingType;

---
<HeadingTag style={ `--section-num: "${sectionNumber < 10 ? '0'+sectionNumber : sectionNumber  }"` }><slot /></HeadingTag>

<style lang="scss">
    h1,h2,h3,h4,h5,h6 {
      &::before {
          content: var(--section-num);
      }
    }    
</style>