---
import './SectionHeading.scss';

interface SectionHeadingProps {
    headingType?: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6';
    sectionNumber?: number;
    isStyled?: boolean;
}

const {
    headingType = "h1",
    sectionNumber = 1,
    isStyled = true,
}: SectionHeadingProps = Astro.props;

const HeadingTag = headingType;

---
<HeadingTag class={ (isStyled === true ? `styled` : ``) + (sectionNumber >= 100 ? ` extended` : ``) } style={ `--section-num: "${sectionNumber < 10 ? '0'+sectionNumber : sectionNumber  }"` }><slot /></HeadingTag>

<style lang="scss">
    h1,h2,h3,h4,h5,h6 {
      &::before {
          content: var(--section-num);
      }
    }    
</style>