---
import './SectionHeading.scss';

interface Props {
    headingType?: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6';
    sectionNumber?: number;
    isStyled?: boolean;
}

const {
    headingType = 'h1',
    sectionNumber = 1,
    isStyled = true,
} = Astro.props;

const HeadingTag = headingType;
const formattedNumber = sectionNumber < 10 ? `0${sectionNumber}` : `${sectionNumber}`;
---

<HeadingTag 
    class:list={[{ styled: isStyled, extended: sectionNumber >= 100 }]}
    style={`--section-num: "${formattedNumber}"` as any}
>
    <slot />
</HeadingTag>

<style lang="scss">
    h1, h2, h3, h4, h5, h6 {
        &::before {
            content: var(--section-num);
        }
    }
</style>