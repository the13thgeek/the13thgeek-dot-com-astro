---
import GlobalLayout from '../layouts/GlobalLayout.astro';
import SectionHomeAbout from '../components/SectionHomeAbout.astro';
import SectionHero from '../components/SectionHero.astro';
import SectionHero2 from '../components/SectionHero2.astro';
import SectionContainer from '../components/SectionContainer.astro';
import ProjectsGrid from '../components/ProjectsGrid.tsx';
import SectionHomeBlog from '../components/SectionHomeBlog.astro';
import SectionHomeGaming from '../components/SectionHomeGaming.astro';
import ProjectsList from '../components/ProjectsList.astro';
import SectionHeading from '../components/SectionHeading.astro';


---

<GlobalLayout 
	title="the13thgeek&trade;" 
	path="/" 
	section="home"
	description="Welcome to the personal website of the13thgeek, a developer and tech enthusiast."
	keywords="the13thgeek, astro, blog, developer, software engineer, tech">
	
    <SectionHero2 />

    <SectionContainer noTopMargin ctaText='More projects' ctaHref='/projects/'>
		<SectionHeading sectionNumber={2} headingType='h2' slot="heading">Projects</SectionHeading>
			<!-- <ProjectsGrid /> -->
			<!-- <ProjectsGrid client:load /> -->
			 <ProjectsList></ProjectsList>
    </SectionContainer>

	<!-- <SectionContainer noTopMargin sectionTitle="Field Notes" sectionNumber="3" className="blog">
		<SectionHomeBlog />
	</SectionContainer> -->

	<SectionContainer noTopMargin className="blog" ctaText='More entries' ctaHref='/field-notes/'>
		<SectionHeading sectionNumber={3} headingType='h2' slot="heading">Field Notes</SectionHeading>
		<SectionHomeBlog />
	</SectionContainer>

	<SectionContainer noTopMargin className="gaming">
		<SectionHeading sectionNumber={4} headingType='h2' slot="heading">Gaming</SectionHeading>
		<SectionHomeGaming />
	</SectionContainer>
	
</GlobalLayout>

